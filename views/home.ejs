<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zoom Clone</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link rel="stylesheet" href="/public/bootstrap.min.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__video">
          <div id="video-grid"></div>
        </div>

        <div class="main__controls">
          <div class="main__controls_block">
            <div onclick="muteUnmute()" class="control_button" id="main__mute_button">
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div onclick="playStop()" class="control_button" id="main__video_button">
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>

          <div class="main__controls_block">
            <div class="control_button"><i class="fas fa-shield-alt"></i> <span>Security</span></div>
            <div class="control_button">
              <i class="fas fa-users"></i>
              <span>Participants </span>
            </div>
            <div class="control_button">
              <i class="fas fa-comment-alt"></i>
              <span>chat </span>
            </div>
          </div>

          <div class="main__controls_block">
            <div onclick="window.close();" class="control_button">
              <i class="fas fa-sign-out-alt leave_meeting"></i>

              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">
          <h6>Chat <span class="badge badge-success">0</span></h6>
        </div>
        <div class="main__user_name">
          <input type="text" id="chat_user" placeholder="Type Your UserName Here....." />
        </div>
        <div class="main__chat_window">
          <ul class="messages"></ul>
        </div>
        <div class="main__chat_container">
          <input type="text" id="chat_message" placeholder="Type Message Here....." />
        </div>
      </div>
    </div>
  </body>
  <script>
    const ROOM_ID = "<%= roomID %>";
    const User = "<%= user %>";
    const Room = "<%= room %>";

    console.log(User, Room);
  </script>
  <script src="/public/jquery-3.4.1.min.js"></script>
  <script src="/public/bootstrap.bundle.min.js"></script>
  <script src="/public/index.js"></script>
</html>
